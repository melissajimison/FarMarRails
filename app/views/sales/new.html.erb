<main>
	<h2>Add a New Sale</h2>
	<%= form_for [@vendor,@sale] do |f| %>
	<table>
		<td><%= f.label :amount %>
		  <%= f.text_field :amount %></td>
			<%= f.hidden_field :vendor_id, value: @vendor.id %>
		<td><%= f.label :product_id %>
		  <%= f.text_field :product_id %></td>
		<td><%= f.label :purchase_time %>
		  <%= f.text_field :purchase_time, value: DateTime.now%></td>
		  <td><%= f.submit %></td>
		<% end %>
	</table>
</main>
